# .env 파일

# ==================================
# 서버 설정 (Server Configuration)
# ==================================
SERVER_PORT=8080

# ==================================
# 데이터베이스 설정 (Database Configuration)
# ==================================
DB_URL=jdbc:postgresql://db:5432/nexusdb
DB_USERNAME=
DB_PASSWORD=password

# ==================================
# API 키 (API Keys)
# ==================================
RIOT_API_KEY=RGAPI-eb1dd9e5-83d0-4401-834b-75fd8fe4b8c2

# ==================================
# JWT 인증 (JWT Authentication)
# ==================================
JWT_SECRET_KEY=your-very-secret-and-long-jwt-key-that-is-hard-to-guess
JWT_EXPIRATION_MS=86400000

# ==================================
# 외부 서비스 (External Services)
# ==================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# ==================================
# 보안 설정 (Security Configuration)
# ==================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ==================================
# OAuth2 소셜 로그인 (OAuth2 Social Login)
# ==================================
# Google OAuth2 클라이언트 설정
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth2 클라이언트 설정
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ==================================
# 이메일 설정 (Email Configuration)
# ==================================
# Gmail SMTP 설정 (Gmail App Password 사용)
GMAIL_USERNAME=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# 이메일 발신자 정보
EMAIL_FROM=noreply@nexus.com
EMAIL_NAME=Nexus Platform
